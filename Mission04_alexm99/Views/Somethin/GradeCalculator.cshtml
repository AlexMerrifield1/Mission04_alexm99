@{
    ViewData["Title"] = "Calculate your Grade!";

}

@model GradeCalculatorModel;

<h2>Calculate your Grade Below</h2>
<br />
<form method="post">
    <h3>Put your current percentage scored for each grade category</h3>
    <label for="txtAssignments">Assignments:</label>
    <input id="txtAssignments" asp-for="Assignments" />% <br />

    <label for="txtGroupProject">Group Project:</label>
    <input id="txtGroupProject" asp-for="Group_Project" />% <br />

    <label>Quizzes:</label>
    <input id="txtQuizzes" asp-for="Quizzes" />% <br />

    <label>Midterm Exam:</label>
    <input id="txtMidtermExam" asp-for="Midterm_Exam" />% <br />

    <label>Final Exam:</label>
    <input id="txtFinalExam" asp-for="Final_Exam" />% <br />

    <label>INTEX:</label>
    <input id="txtINTEX" asp-for="INTEX" />% <br />

    <input id="btnSend" type="submit" value="Submit Grades" />

    <br />
    <label>Final Grade Percentage: </label>
    <input id="finalPercentage" type="number" disabled />
    <label>Final Letter Grade: </label>
    <input id="letterGrade" type="text" disabled />
    <div asp-validation-summary="All"></div>

</form>
<script src="~/js/GradeCalculator.js"></script>
